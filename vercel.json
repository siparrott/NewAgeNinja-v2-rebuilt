{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    {
      "functions": {
        "api/index.ts": { "runtime": "nodejs20.x", "memory": 1024, "maxDuration": 10 }
      },
      "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.ts" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ]
}