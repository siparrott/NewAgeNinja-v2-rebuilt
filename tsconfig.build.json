{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true
  },
  "include": ["api/**/*", "server/routes.ts", "server/app.ts", "shared/**/*"],
  "exclude": [
    "agent/**/*",
    "server/autoblog*.ts",
    "server/email-import.ts", 
    "server/routes-test.ts",
    "server/scraping-agent.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "test-*.ts",
    "test-*.js",
    "scripts/**/*"
  ]
}
